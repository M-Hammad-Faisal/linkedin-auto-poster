{
  "name": "linkedin-auto-poster",
  "version": "1.0.0",
  "description": "An automated LinkedIn poster built using Node.js, TypeScript, and Playwright for reliable scheduling and immediate publishing.",
  "main": "dist/linkedin-poster.js",
  "type": "module",
  "scripts": {
    "start": "tsx src/index.ts",
    "build": "npm-run-all clean build:tsc prettier lint",
    "clean": "rm -rf dist",
    "build:tsc": "tsc",
    "prettier": "prettier --write \"src/**/*.ts\" --check",
    "prettier:format": "prettier --write \"src/**/*.ts\"",
    "lint": "eslint \"src/**/*.ts\"",
    "lint:fix": "eslint \"src/**/*.ts\" --fix",
    "prepare": "husky"
  },
  "keywords": [
    "playwright",
    "linkedin",
    "automation",
    "typescript",
    "nodejs",
    "scheduling"
  ],
  "author": "Muhammad Hammad Faisal",
  "license": "ISC",
  "dependencies": {
    "dotenv": "^16.4.5",
    "npm-run-all": "^4.1.5",
    "playwright": "^1.57.0",
    "playwright-extra": "^4.3.6",
    "puppeteer-extra-plugin-stealth": "^2.11.2"
  },
  "lint-staged": {
    "*.{ts}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "devDependencies": {
    "@types/node": "^20.11.24",
    "@typescript-eslint/eslint-plugin": "^8.49.0",
    "@typescript-eslint/parser": "^8.49.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^15.15.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "tsx": "^4.7.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.49.0"
  }
}
